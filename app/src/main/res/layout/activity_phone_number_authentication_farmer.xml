<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneNumberAuthenticationFarmer">

    <ImageView android:id="@id/imageView3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="400.0dip"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wave7" />
    <TextView android:textSize="20.0sp"
        android:textColor="#ff1e88e5"
        android:id="@id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="134.0dip"
        android:layout_marginBottom="247.0dip"
        android:text="Confirm the Code sent to your number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3" />
    <EditText
        android:id="@+id/editText2Farmer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70.0dip"
        android:layout_marginTop="47.0dip"
        android:layout_marginRight="70.0dip"
        android:layout_marginBottom="151.0dip"
        android:ems="10"
        android:inputType="number"
        android:layout_marginStart="70.0dip"
        android:layout_marginEnd="70.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6" />
    <Button
        android:textSize="20.0sp"
        android:textColor="#ffffffff"
        android:id="@id/button2"
        android:background="#ff1e88e5"
        android:visibility="visible"
        android:onClick="VerifyingInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70.0dip"
        android:layout_marginTop="34.0dip"
        android:layout_marginRight="70.0dip"
        android:layout_marginBottom="53.0dip"
        android:text="CONTINUE"
        android:layout_marginStart="70.0dip"
        android:layout_marginEnd="70.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText2Farmer" />

</androidx.constraintlayout.widget.ConstraintLayout>